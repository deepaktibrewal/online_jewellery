<%= link_to("Logout", access_logout_path) %>
<%= link_to("<< Back To List",items_path(category_id: @category.id),class: 'back-link') %>

<div class="Items new">
  <h2> Create Item</h2>

  <%= form_for @item, url: items_path(category_id: @category.id), html: { multipart: true } do |f| %>

    <table summary="Item form fields">
      <tr>
        <th>Name:</th>
        <td><%= f.text_field(:name) %></td>
      </tr>

      <tr>
        <th>Price:</th>
        <td><%= f.text_field(:price) %></td>
      </tr>

      <tr>
        <th>Category_name:</th>
        <td><%= f.select(:category_id, @categories.map {|s| [s.name, s.id]}) %></td>
      </tr>

      <tr>
        <th>Description:</th>
        <td><%= f.text_area(:description, size: "17*17") %></td>
      </tr>

      <tr>
        <th>Image:</th>
        <td><%= f.file_field(:image) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Create Item") %>
    </div>

    <% end %>
