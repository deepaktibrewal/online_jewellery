<%= #select_tag 'category_id', options_for_select(@categories.map {|s| [s.name, s.id]}) %>
<%= #button_to 'Call Action', access_shop_front, method: :post %>
<%= form_tag({ controller: 'access', action: 'access_shop_front' }, method: 'get') do %>
  <%= select_tag 'id', options_for_select(@categories.map {|s| [s.name, s.id]}) %>
  <%= submit_tag "Search", name: nil, class: 'btn' %>
<% end %>
<table class="listing" summary="Item list">
  <tr class="header">
    <th>Item_id</th>
    <th>Item_name</th>
    <th>Item_price</th>
    <th>Category_id</th>
    <th>Item_description</th>
    <th>Actions</th>
  </tr>
  <% @items.each do |item| %>
  <tr>
    <td><%= item.id %></td>
    <td><%= item.name %></td>
    <td><%= item.price %></td>
    <td><%= item.category_id %></td>
    <td><%= item.description %></td>
  </tr>
  <% end %>
