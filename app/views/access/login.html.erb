<% @page_title ="Admin Login" %>
<body>
  <header class="header">
    <span class="container">
      <h2 class="title">Welcome To Jewellery_Plaza</h1>
    </span>
  </header>

  <% if !flash[:notice].blank? %>
    <div class="container notice">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <div class="Categories container">
    <%= form_tag(access_attempt_login_path, method: :post) do %>
    <table class="align">
      <tr>
        <td><%= label_tag(:email) %></td>
        <td class="form-padding"><%= text_field_tag(:email, params[:email]) %></td>
      </tr>
      <tr>
        <td><%= label_tag(:password) %></td>
        <td class="form-padding"><%= password_field_tag(:password) %></td>
      </tr>
      <tr>
        <td>&nbsp;</td>
        <td class="form-padding form-buttons"><%= submit_tag("Log In")%></td>
      </tr>
    </table>
    <% end %>
    <%= link_to("Sign Up!!", new_user_path, class: 'action align') %>
  </div>
</body>
