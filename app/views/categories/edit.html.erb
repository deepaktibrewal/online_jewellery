<%= link_to("<< Back To List",categories_path,class: 'back-link') %>

<div class="Categories edit">
  <h2> Edit Category</h2>

  <%= form_for(@category) do |f| %>

    <table summary="Category form fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Update Category") %>
    </div>

    <% end %>
