<div class="categories index">
  <h2>Categories</h2>
  <%= link_to("Add New Category", new_category_path, class: 'action new') %>
  <table class="listing" summary="Category list">
    <tr class="header">
      <th>Category_id</th>
      <th>Category</th>
      <th>Actions</th>
    </tr>
    <% @categories.each do |category| %>
    <tr>
      <td><%= category.id %></td>
      <td><%= category.name %></td>
      <td class="actions">
        <%= link_to("Show Items",items_path(category_id: category.id),class: 'action show') %>
        <%= link_to("Edit Category",edit_category_path(category),class: 'action edit') %>
        <%= link_to("Delete Category",{action: 'delete', id: category.id},data: {confirm: 'Are you sure you want to delete this category?'}, class: 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
