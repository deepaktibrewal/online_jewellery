<body>
  <header class="header">
    <div class="container ">
      <ul class="nav nav-pills navbar-right">
        <li role="presentation"><%= link_to("Back To Cart", shopfronts_view_path, class: 'back-link') %></li>
        <li role="presentation"><%= link_to("Mail Wishlist", shopfronts_usermail_path, class: 'back-link') %></li>
        <li role="presentation"><%= link_to("Logout", access_logout_path) %></li>
      </ul>
    </div>
  </header>

  <div class="items index container">
    <h2>Items In Your Wishlist</h2>
    <table class="listing table table-striped table-inverse" summary="Item list">
      <tr class="header">
        <th>Item_image</th>
        <th>Item_name</th>
        <th>Item_price</th>
        <th>Item_description</th>
      </tr>
    <% @items.each do |item| %>
    <tr>
      <td><%= image_tag item.image.url(:thumb) %></td>
      <td><%= item.name %></td>
      <td><%= item.price %></td>
      <td><%= item.description %></td>
    </tr>
    <% end %>
    </table>
</div>
</body>
